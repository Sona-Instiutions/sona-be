{
  "kind": "collectionType",
  "collectionName": "institutions",
  "info": {
    "singularName": "institution",
    "pluralName": "institutions",
    "displayName": "Institution"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "bannerSubtitle": {
      "type": "text",
      "maxLength": 500,
      "required": false
    },
    "bannerTitlePrefix": {
      "type": "string",
      "maxLength": 100,
      "required": false
    },
    "bannerTitlePrefixColor": {
      "type": "string",
      "default": "white",
      "maxLength": 50,
      "required": false
    },
    "bannerTitleHighlight": {
      "type": "string",
      "maxLength": 100,
      "required": false
    },
    "bannerTitleHighlightColor": {
      "type": "string",
      "default": "#fbbf24",
      "maxLength": 50,
      "required": false
    },
    "aboutInstitute": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::about-institute.about-institute",
      "mappedBy": "institution"
    },
    "program": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::program.program",
      "mappedBy": "institution"
    },
    "achievements": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::achievement.achievement",
      "mappedBy": "institution"
    },
    "valuePropositions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::value-proposition.value-proposition",
      "mappedBy": "institution"
    },
    "keyHighlightSection": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::key-highlight-section.key-highlight-section",
      "mappedBy": "institution"
    }
  }
}
