{
  "kind": "collectionType",
  "collectionName": "achievements",
  "info": {
    "singularName": "achievement",
    "pluralName": "achievements",
    "displayName": "Achievement Section"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "institution": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::institution.institution",
      "inversedBy": "achievements"
    },
    "titlePrefix": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "titlePrefixColor": {
      "type": "string",
      "required": false,
      "maxLength": 50,
      "default": "white"
    },
    "titleHighlight": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "titleHighlightColor": {
      "type": "string",
      "required": false,
      "maxLength": 50,
      "default": "#fbbf24"
    },
    "recognitionTitle": {
      "type": "string",
      "required": false,
      "maxLength": 150
    },
    "recognitionBackgroundColor": {
      "type": "string",
      "required": false,
      "maxLength": 50,
      "default": "#1e3a5f"
    },
    "recognitions": {
      "type": "component",
      "repeatable": true,
      "component": "content.recognition-item",
      "required": false
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "achievements": {
      "type": "component",
      "repeatable": true,
      "component": "content.achievement-item",
      "required": false
    }
  }
}
