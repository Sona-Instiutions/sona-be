{
  "kind": "collectionType",
  "collectionName": "program_sections",
  "info": {
    "singularName": "program-section",
    "pluralName": "program-sections",
    "displayName": "Program Section"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "program": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::program.program",
      "inversedBy": "sections",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "icon": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::icon-badge.icon-badge",
      "required": false
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "learnMoreText": {
      "type": "string",
      "required": false,
      "default": "Learn More",
      "maxLength": 100
    },
    "learnMoreUrl": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "learnMoreIsExternal": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": false
    }
  }
}

